<div class=" lpage min-vh-100 bg-theme">
 
    <div class="container p-2 d-flex flex-row align-items-center justify-content-between flex-wrap mx-auto"id="jobListingsContainer">
        <% jobs.forEach(job=>{ %>
        <div class="card bg-theme border-white rounded mt-3 jobList" style="width: 18rem;">
            <div class="card-header d-flex flex-column align-items-start justify-content-start p-2">
                <span style="width: 160px;" class="heading text-white border-opacity-50 p-1 border border-success-subtle rounded-1">
                    Actively Hiring
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-graph-up-arrow text-success mx-2" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M0 0h1v15h15v1H0V0Zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5Z" />
                </svg>
                </span>
              
                    <h5 class="text-warning fw-bold my-1" id="<%= job.companyname %>"><%= job.companyname %></h5>
                    <div>
                        <span class="lead "><%= job.jobcategory %></span>
                        <span class="lead text-info"><%= job.jobdesignation %></span>
                    </div>
                  </div>
                <div class="card-body d-flex flex-column align-items-start justify-content-center">
                  <p class = "fw-bold">
                    <i class="fa-solid fa-location-dot"></i>
                   <%= job.joblocation %>
                  </p>
                  <p class="fw-bold">
                    <i class="bi fa-solid fa-indian-rupee-sign"></i>
                    <%=  job.salary %>
                  </p>
                  <% job.skillsRequired.forEach(skill =>{ %>
                  <div class="skills g-2 d-flex">
                    <button class="btn btn-sm btn-outline-info">
                            <%= skill %>
                        <% }) %>
                        </button>
                  </div>
             
               
              <div class="d-grid w-100 gap-6">
                <a href ="/jobs/<%= job.id %>" class="btn btn-large btn-outline-success my-2" >View Details</a>
               
              </div>
            
            </div>
        </div>
        <%  }) %>
    </div>
</div>

