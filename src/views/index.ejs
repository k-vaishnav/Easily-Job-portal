<div>
      <div class="lpage">
        <% if(errorMessage){ %>
          <% errorMessage.forEach(message =>{ %>
            <div class="alert alert-danger" role="alert">
              <%= message.msg %>
            </div>
        <%  }) %>
         
           <% }%>
        <div class="container main">
       
          <div class="left p-2">
            <h1 class="main-heading">A Comprehensive Platform for reliable</h1>
            <h2 class="text-white sentence" style="font-weight: 100px">
              job oppurtunities and internships.
            </h2>
            <h5 style="font-weight: 200; font-size: 1.4rem">
              Get Discovered.Get Hired.
            </h5>
            <div class="actions">
              <a href="/jobs" class="btn btn-lg lbtn">Iam A job seeker.</a>
              <% if(user) { %>
                <button
                type="button"
                class="btn btn-lg lbtn"
                data-bs-toggle="modal"
                data-bs-target="#registerModal"
                disabled
              >
                Iam a Recruiter.
              </button>
              <%  } else { %>
              <button
                type="button"
                class="btn btn-lg lbtn"
                data-bs-toggle="modal"
                data-bs-target="#registerModal"
              >
                Iam a Recruiter.
              </button>
              <%  } %>
            </div>
          </div>
          <div class="right">
            <img
              src="https://easily-deploy.onrender.com/images/banner.png"
              alt="banner"
            />
          </div>
        </div>

      </div>
      <div class="modal fade" id="registerModal" tabindex="-1" >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h3 class="modal-title bold" id="staticBackdropLabel">
                Experience easily!
            </h3>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/register" method="post" class="p-2">
               
                <div class="input-group mb-3">
                  <span class="input-group-text" id="name">Name</span>
                  <input type="text" class="form-control" placeholder="enter your name" name="name"  >
                </div>
                <div class="input-group mb-3">
                  <span class="input-group-text" id="email">Email</span>
                  <input type="text" class="form-control" placeholder="enter your email" name="email" >
                </div>
                <div class="input-group mb-3">
                  <span class="input-group-text" id="password">password</span>
                  <input type="password" class="form-control" placeholder="enter your password" name="password"  >
                </div>
                <button class="btn btn-lg lbtn" type="submit">Register</button> 
              </form>
            </div>
            <div class="modal-footer">
               <div class="left d-flex flex-row justify-content-between align-items-center" style="font-weight: 200;">
                <span>Already Registered?</span>
                <button type="button" class="btn btn-sm btn-outline-success" data-bs-target ="#loginModal" data-bs-toggle="modal">Login</button>
               </div>
              <div class="right d-flex flex-row">
                <a href="#"><i class="text-primary bi bi-twitter"></i></a>
                <a href="#"><i class="text-danger bi bi-instagram"></i></a>
                <a href="#"><i class="text-info bi bi-facebook"></i></a>
                <a href="#"><i class="text-success bi bi-whatsapp"></i></a>
                <a href="#"><i class="text-primary bi bi-linkedin"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Login -->
      <div class="modal fade" id="loginModal" tabindex="-1" >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5 text-success" id="loginModalLabel" style="font-weight: 200;" >
                Experience easily!
            </h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/login" method="post" class="p-2">
               
                <div class="input-group mb-3">
                  <span class="input-group-text" id="email">Email</span>
                  <input type="email" class="form-control" placeholder="enter your email" required aria-label="Email" aria-describedby="email">
                </div>
                <div class="input-group mb-3">
                  <span class="input-group-text" id="password">password</span>
                  <input type="password" class="form-control" placeholder="enter your password" required aria-label="Password" aria-describedby="password">
                </div>
                <button class="btn btn-lg lbtn" type="submit">Login</button> 
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const textWrapper = document.querySelector(".sentence");
        textWrapper.innerHTML = textWrapper.textContent.replace(
          /\S/g,
          '<span class="letter">$&</span>'
        );

        anime
          .timeline({ loop: true })
          .add({
            targets: ".letter",
            opacity: [0, 1],
            translateX: [40, 0],
            translateZ: 0,
            easing: "easeOutExpo",
            duration: 1200,
            delay: (el, i) => 500 + 30 * i,
          })
          .add({
            targets: ".letter",
            translateX: [0, -30],
            opacity: [1, 0],
            easing: "easeInExpo",
            duration: 1100,
            delay: (el, i) => 100 + 30 * i,
          });
      });
    </script>

